<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="DeckCommerce_Integration::menu" title="Deck Commerce" translate="title" sortOrder="50">
                    <resource id="DeckCommerce_Integration::deck_shipping" title="Manage Shipping Methods" translate="title" />
                    <resource id="DeckCommerce_Integration::deck_order" title="Deck Commerce Order Actions" translate="title" />
                    <resource id="DeckCommerce_Integration::deck_inventory" title="Deck Commerce Inventory Import" translate="title" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="DeckCommerce_Integration::configuration" title="DeckCommerce Configuration" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
